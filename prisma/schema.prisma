generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EventDB {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  start     DateTime
  end       DateTime
  userId    String
  userName  String
  questions QuestionDB[]

  @@map("events")
}

model QuestionDB {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String
  userName  String
  event_id  String   @db.Uuid
  event     EventDB  @relation(fields: [event_id], references: [id])

  @@map("questions")
}